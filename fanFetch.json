{
	"application": {
		"title": "FanFetch",
		"theme": "bootswatch-flatly",
		"collections": [
			{
				"name": "events",
				"type": "collection",
				"roles_allowed_to_insert": [
					"eventAdmin"
				],
				"roles_allowed_to_update": [
					"eventAdmin"
				],
				"roles_allowed_to_delete": [
					"eventAdmin"
				],
				"fields": [
					{
						"name": "eventName",
						"title": "Event Name",
						"type": "string"
					},
					{
						"name": "venue",
						"type": "string",
						"join_collection": "venues",
						"input": "select",
						"lookup_query_name": "venuesList",
						"lookup_key": "_id",
						"lookup_field": "venueName"
					},
					{
						"name": "eventImage",
						"title": "Image",
						"type": "string"
					}
				]
			},
			{
				"name": "venues",
				"type": "collection",
				"roles_allowed_to_insert": [
					"venueAdmin"
				],
				"roles_allowed_to_update": [
					"venueAdmin"
				],
				"roles_allowed_to_delete": [
					"venueAdmin"
				],
				"fields": [
					{
						"name": "venueName",
						"title": "Venue Name",
						"type": "string"
					}
				]
			},
			{
				"name": "vendors",
				"type": "collection",
				"roles_allowed_to_insert": [
					"vendorAdmin"
				],
				"roles_allowed_to_update": [
					"vendorAdmin"
				],
				"roles_allowed_to_delete": [
					"vendorAdmin"
				],
				"fields": [
					{
						"name": "vendorName",
						"title": "Name",
						"type": "string"
					},
					{
						"name": "vendorImage",
						"title": "Image",
						"type": "string"
					},
					{
						"name": "venue_id",
						"title": "Venue",
						"type": "string",
						"input": "select",
						"lookup_query_name": "venuesList",
						"lookup_key": "_id",
						"lookup_field": "venueName",
						"join_collection": "venues"
					}
				]
			},
			{
				"name": "products",
				"type": "collection",
				"roles_allowed_to_insert": [
					"vendorAdmin"
				],
				"roles_allowed_to_update": [
					"vendorAdmin"
				],
				"roles_allowed_to_delete": [
					"vendorAdmin"
				],
				"fields": [
					{
						"name": "productName",
						"title": "Product Name",
						"type": "string"
					},
					{
						"name": "productVendor",
						"title": "Vendor",
						"type": "string",
						"join_collection": "vendors",
						"input": "select",
						"lookup_query_name": "vendorList",
						"lookup_key": "_id",
						"lookup_field": "vendorName"
					},
					{
						"name": "productPrice",
						"title": "Price",
						"type": "float"
					},
					{
						"name": "productImage",
						"title": "Image",
						"type": "string"
					}
				]
			},
			{
				"name": "Orders",
				"type": "collection",
				"roles_allowed_to_read": [
					"user"
				],
				"roles_allowed_to_insert": [
					"user"
				],
				"roles_allowed_to_update": [
					"user"
				],
				"roles_allowed_to_delete": [
					"user"
				],
				"fields": [
					{
						"name": "productsOrdered",
						"title": "Your Order",
						"type": "array",
						"join_collection": "products"
					},
					{
						"name": "runner",
						"title": "Runner",
						"type": "string",
						"join_collection": "users"
					}
				]
			},
			{
				"name": "venueSections",
				"type": "collection",
				"roles_allowed_to_insert": [
					"venueAdmin"
				],
				"roles_allowed_to_update": [
					"venueAdmin"
				],
				"roles_allowed_to_delete": [
					"venueAdmin"
				],
				"fields": [
					{
						"name": "seats",
						"title": "Seats",
						"type": "array",
						"input": "crud",
						"array_item_type": "object",
						"crud_fields": [
							{
								"name": "seatNumber",
								"title": "Seat Number",
								"type": "string"
							}
						]
					},
					{
						"name": "sectionName",
						"title": "Name",
						"type": "string"
					},
					{
						"name": "venue_id",
						"title": "Venue",
						"type": "string",
						"input": "select",
						"lookup_query_name": "venuesList",
						"lookup_key": "_id",
						"lookup_field": "venueName",
						"join_collection": "venues"
					}
				]
			}
		],
		"queries": [
			{
				"name": "current_user_data",
				"collection": "users",
				"filter": {
					"_id": "Meteor.userId()"
				},
				"find_one": true
			},
			{
				"name": "eventsList",
				"collection": "events"
			},
			{
				"name": "productsList",
				"collection": "products"
			},
			{
				"name": "venuesList",
				"collection": "venues"
			},
			{
				"name": "addVenueQuery",
				"collection": "venues",
				"filter": {
					"_id": null
				},
				"find_one": true
			},
			{
				"name": "editVenueQuery",
				"collection": "venues",
				"find_one": true,
				"filter": {
					"_id": ":venue_id"
				}
			},
			{
				"name": "edit_venue_query",
				"collection": "venues",
				"filter": {
					"_id": ":venue_id"
				}
			},
			{
				"name": "addEventQuery",
				"collection": "events",
				"find_one": true,
				"filter": {
					"_id": null
				}
			},
			{
				"name": "venueSectionsList",
				"collection": "venueSections",
				"filter": {
					"venue_id": ":venue_id"
				}
			},
			{
				"name": "venueSectionsListAll",
				"collection": "venueSections"
			},
			{
				"name": "addSectionSeatingQuery",
				"collection": "venueSections",
				"find_one": true,
				"filter": {
					"_id": null
				}
			},
			{
				"name": "vendorList",
				"collection": "vendors"
			},
			{
				"name": "addVendorQuery",
				"collection": "vendors",
				"find_one": true,
				"filter": {
					"_id": null
				}
			},
			{
				"name": "addProductQuery",
				"collection": "products",
				"find_one": true,
				"filter": {
					"_id": null
				}
			}
		],
		"public_zone": {
			"navbar_class": "navbar-inverse navbar-fixed-top",
			"pages": [
				{
					"name": "home_public",
					"type": "page",
					"template": "login"
				},
				{
					"name": "login",
					"template": "login",
					"type": "page"
				},
				{
					"name": "register",
					"template": "register",
					"type": "page"
				},
				{
					"name": "forgot_password",
					"template": "forgot_password",
					"type": "page"
				},
				{
					"name": "reset_password",
					"template": "reset_password",
					"route_params": [
						"resetPasswordToken"
					],
					"type": "page"
				}
			],
			"components": [
				{
					"name": "left_menu",
					"type": "menu",
					"class": "nav navbar-nav",
					"dest_selector": "#menu",
					"items": [
						{
							"title": "Home",
							"route": "home_public"
						}
					]
				},
				{
					"name": "right_menu",
					"type": "menu",
					"class": "nav navbar-nav navbar-right",
					"dest_selector": "#menu",
					"items": [
						{
							"title": "Register",
							"route": "register"
						},
						{
							"title": "Login",
							"route": "login"
						}
					]
				}
			],
			"type": "zone"
		},
		"private_zone": {
			"navbar_class": "navbar-default navbar-fixed-top",
			"pages": [
				{
					"name": "home_private",
					"title": "Welcome {{userFullName}}!",
					"type": "page"
				},
				{
					"name": "user_settings",
					"pages": [
						{
							"name": "profile",
							"components": [
								{
									"name": "edit_form",
									"type": "form",
									"mode": "update",
									"title": "Edit your profile",
									"submit_route": "user_settings.profile",
									"query_name": "current_user_data",
									"fields": [
										{
											"name": "profile.name",
											"title": "Name",
											"required": true,
											"type": "string"
										},
										{
											"name": "profile.email",
											"title": "E-mail",
											"type": "email",
											"required": true
										},
										{
											"name": "profile.facebook",
											"title": "Facebook URL",
											"type": "string"
										},
										{
											"name": "profile.google",
											"title": "Google+ URL",
											"type": "string"
										},
										{
											"name": "profile.twitter",
											"title": "Twitter ID",
											"type": "string"
										},
										{
											"name": "profile.website",
											"title": "Website URL",
											"type": "string"
										}
									]
								}
							],
							"type": "page"
						},
						{
							"name": "change_pass",
							"template": "change_pass",
							"type": "page"
						},
						{
							"name": "payment_methods",
							"title_icon_class": "Payment Methods",
							"type": "page"
						}
					],
					"components": [
						{
							"name": "side_menu",
							"type": "menu",
							"class": "nav nav-stacked nav-pills",
							"items": [
								{
									"title": "Profile",
									"route": "user_settings.profile"
								},
								{
									"title": "Change password",
									"route": "user_settings.change_pass"
								},
								{
									"title": "Payment Methods",
									"route": "user_settings.payment_methods"
								}
							]
						}
					],
					"type": "page"
				},
				{
					"name": "logout",
					"template": "logout",
					"type": "page"
				},
				{
					"name": "events",
					"title": "Events",
					"type": "page",
					"components": [
						{
							"name": "events",
							"query_name": "eventsList",
							"type": "data_view",
							"details_route_params": [
								{
									"name": "event_id",
									"value": "this._id"
								}
							]
						}
					]
				},
				{
					"name": "products_menu",
					"title": "Menu",
					"type": "page",
					"components": [
						{
							"name": "menu_items",
							"query_name": "products_list",
							"type": "data_view"
						}
					]
				},
				{
					"name": "event_seating",
					"title": "Where is your seat?",
					"type": "page",
					"query_name": "venueSectionsList",
					"route_params": [
						"venue_id"
					]
				},
				{
					"name": "venue_admin",
					"type": "page",
					"components": [
						{
							"name": "venueAdminView",
							"type": "data_view",
							"title": "Venues",
							"query_name": "venuesList",
							"insert_route": "venue_admin.add_venue",
							"edit_route": "venue_admin.edit_venue",
							"edit_route_params": [
								{
									"name": "venue_id",
									"value": "this._id"
								},
								{
									"name": "somethingElse",
									"value": "1"
								}
							]
						}
					],
					"pages": [
						{
							"name": "add_venue",
							"query_name": "addVenueQuery",
							"type": "page",
							"components": [
								{
									"name": "add_venue_form",
									"mode": "insert",
									"submit_route": "venue_admin",
									"cancel_route": "venue_admin",
									"close_route": "venue_admin",
									"type": "form",
									"query_name": "addVenueQuery"
								}
							]
						},
						{
							"name": "edit_venue",
							"query_name": "editVenueQuery",
							"route_params": [
								"venue_id"
							],
							"type": "page",
							"components": [
								{
									"name": "edit_venue_form",
									"title": "Edit Venue",
									"query_name": "editVenueQuery",
									"mode": "update",
									"submit_route": "venue_admin",
									"cancel_route": "venue_admin",
									"close_route": "venue_admin",
									"type": "form"
								}
							]
						}
					],
					"title": "Venue Admin"
				},
				{
					"name": "event_admin",
					"title": "Event Admin",
					"type": "page",
					"components": [
						{
							"name": "event_admin_list",
							"query_name": "eventsList",
							"type": "data_view"
						},
						{
							"name": "add_event",
							"title": "Add Event",
							"query_name": "addEventQuery",
							"mode": "insert",
							"submit_route": "event_admin",
							"cancel_route": "event_admin",
							"type": "form"
						}
					]
				},
				{
					"name": "section_seating_admin",
					"title": "Section Seating",
					"type": "page",
					"components": [
						{
							"name": "section_seating_list_all",
							"title": "All Sections",
							"query_name": "venueSectionsListAll",
							"type": "data_view"
						},
						{
							"name": "addSectionSeatingForm",
							"title": "Add Section",
							"query_name": "addSectionSeatingQuery",
							"mode": "insert",
							"type": "form"
						}
					]
				},
				{
					"name": "vendor_admin",
					"title": "Vendor Admin",
					"type": "page",
					"components": [
						{
							"name": "vendor_list_view",
							"query_name": "vendorList",
							"type": "data_view"
						},
						{
							"name": "add_vendor_form",
							"title": "Add Vendor",
							"query_name": "addVendorQuery",
							"mode": "insert",
							"submit_route": "vendor_admin",
							"type": "form"
						}
					]
				},
				{
					"name": "product_admin",
					"title": "Product Admin",
					"type": "page",
					"components": [
						{
							"name": "product_list_view",
							"title": "Products",
							"query_name": "productsList",
							"type": "data_view"
						},
						{
							"name": "add_product_form",
							"title": "Add Product",
							"query_name": "addProductQuery",
							"mode": "insert",
							"submit_route": "product_admin",
							"type": "form"
						}
					]
				}
			],
			"components": [
				{
					"name": "left_menu",
					"type": "menu",
					"class": "nav navbar-nav",
					"dest_selector": "#menu",
					"items": [
						{
							"title": "Home",
							"route": "home_private"
						},
						{
							"title": "Venue Admin",
							"route": "venue_admin"
						},
						{
							"title": "Event Admin",
							"route": "event_admin"
						},
						{
							"title": "Seating Admin",
							"route": "section_seating_admin"
						},
						{
							"title": "Vendor Admin",
							"route": "vendor_admin"
						},
						{
							"title": "Product Admin",
							"route": "product_admin"
						}
					]
				},
				{
					"name": "right_menu",
					"type": "menu",
					"class": "nav navbar-nav navbar-right",
					"dest_selector": "#menu",
					"items": [
						{
							"title": "{{userEmail}}",
							"items": [
								{
									"title": "Settings",
									"route": "user_settings"
								},
								{
									"title": "Logout",
									"route": "logout"
								}
							]
						}
					]
				}
			],
			"type": "zone"
		},
		"roles": [
			"venueAdmin",
			"eventAdmin",
			"vendorAdmin",
			"user"
		],
		"free_zone": {
			"type": "zone"
		},
		"login_with_google": true,
		"login_with_twitter": true,
		"packages": {}
	}
}